<%= form_for @actividad, url: evaluar_actividad_path, html: { method: 'POST', class: 'form-horizontal actividad', role: 'form'} do |f| %>
  <div class="form-group">
    <%= label_tag :nombre,'Nombre', class: '' %>
    <%= f.text_field :nombre, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :estado,'Estado', class: '' %>
    <%= f.select :estado, options_for_select(@estados, @actividad.estado),{},{class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= label_tag :revision,'RevisiÃ³n', class: '' %>
    <div class='dates'>
      <span style="width: 80px;">
        <%= f.select :revision, options_for_select(1..31, @actividad.revision.day),{},{class: 'form-control'} %>
      </span>
      <span style="width: 130px;">
        <%= f.select :revision, options_for_select(meses_helper, @actividad.revision.month),{},{class: 'form-control'} %>
      </span>
      <span style="width: 90px;">
        <%= f.select :revision, options_for_select(anio_helper, @actividad.revision.year),{},{class: 'form-control'} %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :evaluacion,'Evaluacion', class: '' %>
    <%= f.text_field :evaluacion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :progreso,'Progreso (Completado)', class: '' %>
    <div class="progress">
      <% act = @actividad.progreso[:completo]%>
      <div class="progress-bar progress-striped active"  role="progressbar" aria-valuenow="<%= act %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= act %>%">
        <span class="sr-only"><%= act %> %</span>
      </div>
    </div>
  </div>

  <%= f.submit 'Evaluar', :class => 'btn btn-success' %>

<% end %>
