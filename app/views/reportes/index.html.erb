<%= content_for :name, 'Reportes' %>
<%= content_for :description, 'Resumen de Proyectos' %>
<%= content_for :breadcrumbs, raw('<i class="fa fa-fw fa-dashboard"></i> Dashboard / <i class="fa fa-fw fa-table"></i> Reportes') %>

<%= form_tag('/reporte-general', {method: 'post', id: "reporte_general"}) do |f| %>
  <table>
    <tr>
      <td>Rut de Alumno: </td>
      <td><%= select_tag "rut" , options_for_select(@ruts), {prompt: "Todos", class: 'form-group form-control'} %></td>
    </tr>
    <tr>
      <td>Seleccione Sede: </td>
      <td><%= select_tag "sede" , options_for_select(@sedes), {prompt: "Todas", class: 'form-group form-control'} %></td>
    </tr>
    <tr>
      <td>Estado de Proyecto: </td>
      <td><%= select_tag "estado" , options_for_select(@estados), {prompt: "Todos", class: 'form-group form-control'} %></td>
    </tr>
    <tr>
      <td>Con fecha de Inicio: </td>
      <td style="padding-top: 14px;">
        <%= select_tag :inicio_dia, options_for_select(1..31),{prompt: 'Todas', class: 'input-small form-group form-control', style: 'width: 80px; float:left;margin-right: 5px;'} %>
        <%= select_tag :inicio_mes, options_for_select(meses_helper),{prompt: 'Todas', class: 'fecha_mes form-group form-control', style: 'width: 120px; float:left;margin-right: 5px;'} %>
        <%= select_tag :inicio_anio, options_for_select((Time.now.year - 2)..(Time.now.year + 10)),{prompt: 'Todas', class: 'input-small  form-group form-control', style: 'width: 90px; float:left;margin-right: 5px;'} %>
      </td>
    </tr>
    <tr>
      <td>Con fecha de Cierre: </td>
      <td style="padding-top: 14px;">
        <%= select_tag :cierre_dia, options_for_select(1..31),{prompt: 'Todas', class: 'input-small form-group form-control', style: 'width: 80px; float:left;margin-right: 5px;'} %>
        <%= select_tag :cierre_mes, options_for_select(meses_helper),{prompt: 'Todas', class: 'fecha_mes form-group form-control', style: 'width: 120px; float:left;margin-right: 5px;'} %>
        <%= select_tag :cierre_anio, options_for_select((Time.now.year - 2)..(Time.now.year + 10)),{prompt: 'Todas', class: 'input-small form-group form-control', style: 'width: 90px; float:left;margin-right: 5px;'} %>
      </td>
    </tr>
    <tr>
      <td>
        <br>
        <%= submit_tag 'Generar', class: 'btn btn-primary form-group form-control' %>
      </td>
    </tr>
  </table>
<% end %>

