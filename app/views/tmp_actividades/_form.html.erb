<%= form_for @tmp_actividad, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :proyecto_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :proyecto_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :modulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :modulo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :funcionalidad, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :funcionalidad, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :complejidad, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :complejidad, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estado, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :revision, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :revision, :class => 'date_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tmp_actividades_path, :class => 'btn' %>
  </div>
<% end %>
