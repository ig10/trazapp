<%- model_class = TmpActividad -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:proyecto_id) %>:</strong></dt>
  <dd><%= @tmp_actividad.proyecto_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modulo) %>:</strong></dt>
  <dd><%= @tmp_actividad.modulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionalidad) %>:</strong></dt>
  <dd><%= @tmp_actividad.funcionalidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complejidad) %>:</strong></dt>
  <dd><%= @tmp_actividad.complejidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @tmp_actividad.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:revision) %>:</strong></dt>
  <dd><%= @tmp_actividad.revision %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tmp_actividades_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tmp_actividad_path(@tmp_actividad), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tmp_actividad_path(@tmp_actividad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
