<%- model_class = TmpGroup -%>
<div class="page-header">
  <h1>Grupos en cola</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre del proyecto</th>
      <th>Alumnos</th>
      <th>Actividades</th>
      <th>Estado</th>
      <th>Fecha creaci√≥n</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tmp_groups.each do |tmp_group| %>
      <tr>
        <td><%= link_to tmp_group.id, tmp_group_path(tmp_group) %></td>
        <td><%= tmp_group.nombre_proyecto %></td>
        <td><%= tmp_group.users_hash %></td>
        <td><%= tmp_group.activities_hash %></td>
        <td><%= tmp_group.estado %></td>
        <td><%=l tmp_group.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tmp_group_path(tmp_group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tmp_group_path(tmp_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tmp_group_path,
            :class => 'btn btn-primary' %>
