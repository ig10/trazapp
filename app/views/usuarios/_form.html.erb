<%= form_for @usuario, :html => { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rut, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rut, :class => 'form-control valida_rut' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombre_completo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre_completo, :class => 'form-control letras_espacio' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correo_electronico, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correo_electronico, :class => 'form-control email' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :perfil, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :perfil, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sede, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sede, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :carrera, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :carrera, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Â¿Activo?</label>
    <div class="controls">
      <%= f.check_box :activo, :class => 'checkbox' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn' %>
  </div>
<% end %>
